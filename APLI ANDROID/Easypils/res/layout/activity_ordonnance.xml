<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.easypils.OrdonnanceActivity" >

    <TextView
        android:id="@+id/date_ordonnace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="test" />

    <Button
        android:id="@+id/renouveler_ordonnance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="Renouveler" 
       android:onClick="SendDemande"/>

    <TextView
        android:id="@+id/medecin_ordonnance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/date_ordonnace"
        android:layout_below="@+id/date_ordonnace"
        android:text="test" />

    <TextView
        android:id="@+id/preparateur_ordonnance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/medecin_ordonnance"
        android:layout_below="@+id/medecin_ordonnance"
        android:text="test" />

    <TextView
        android:id="@+id/titremedic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/preparateur_ordonnance"
        android:layout_below="@+id/preparateur_ordonnance"
        android:layout_marginTop="21dp"
        android:text="@string/text_titremedicordo"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/medicament_ordonnance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/titremedic"
        android:layout_below="@+id/titremedic"
        android:text="test" />

    <TextView
        android:id="@+id/titrerenouv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/medicament_ordonnance"
        android:layout_marginTop="18dp"
        android:text="@string/text_renouvellementsordo"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/renouvellements_ordonnance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/titrerenouv"
        android:layout_below="@+id/titrerenouv"
        android:text="test" />

</RelativeLayout>
